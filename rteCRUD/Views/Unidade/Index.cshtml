@model IEnumerable<rteCRUD.Models.UnidadeModel>

@{
    ViewData["Title"] = "Unidade";
}

<h1>@ViewData["Title"]</h1>

<a asp-action="Create" class="btn btn-primary">
    <i class="fa-solid fa-plus"></i> Cadastrar
</a>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                @Html.DisplayFor(modelItem => item.Codigo)
                </td>
                <td>
                @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                @Html.DisplayFor(modelItem => item.Ativo)
                </td>
                <td>
                    <div class="btn-group" role="group" aria-label="Ações">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">Detalhar</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Deletar</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
