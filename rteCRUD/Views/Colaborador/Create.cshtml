@model rteCRUD.Models.ColaboradorModel

@{
    ViewData["Title"] = "Create";
}

<h1>@ViewData["Title"]</h1>

<h4>Colaborador</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Codigo" class="control-label"></label>
                <input asp-for="Codigo" class="form-control" />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnidadeId" class="control-label">Unidade</label>
                <select asp-for="UnidadeId" class="form-control" asp-items="ViewBag.Unidades"></select>
                <span asp-validation-for="UnidadeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioId" class="control-label">usuario</label>                
                <select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.Usuarios"></select>
                <span asp-validation-for="UsuarioId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" value="Cadastrar" class="btn btn-primary">
                    <i class="fa-solid fa-plus"></i> Cadastrar
                </button>
                <a asp-action="Index" class="btn btn-secondary"><i class="fa-solid fa-arrow-left"></i> Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
